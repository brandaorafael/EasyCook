<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@color/color_background"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/color_header_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EASYCook"
            android:textColor="@color/color_text_title"
            android:gravity="center"
            android:textSize="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="140dp"
                android:text="Add"
                android:textSize="25dp"
                android:textColor="@color/color_text_button"
                android:id="@+id/button_search"
                android:background="@drawable/round_button"
                android:layout_margin="15dp"
                android:onClick="clique_add"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="140dp"
                android:textSize="20dp"
                android:text="Favorites"
                android:textColor="@color/color_text_button"
                android:id="@+id/radioButton_add"
                android:background="@drawable/round_button"
                android:layout_margin="15dp"
                android:onClick="clique_favorites"/>

            </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Search"
            android:textSize="40dp"
            android:textColor="@color/color_text_button"
            android:id="@+id/radioButton_favorites"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            android:layout_margin="15dp"
            android:onClick="clique_search"/>
        />

    </LinearLayout>

</RelativeLayout>
